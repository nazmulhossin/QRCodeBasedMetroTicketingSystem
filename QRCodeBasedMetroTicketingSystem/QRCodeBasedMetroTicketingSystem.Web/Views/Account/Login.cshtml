@model UserLoginViewModel

@{
    ViewData["Title"] = "Login";
}

@section Styles {
    <link rel="stylesheet" href="~/css/auth.min.css" asp-append-version="true" />
}

<section class="auth-section py-5">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-sm-9 col-md-7 col-lg-5 col-xl-4">
                <div class="card shadow-lg border-0">
                    <div class="card-header bg-primary text-white text-center py-4">
                        <h2 class="mb-0">Welcome Back</h2>
                        <p class="mb-0 mt-2">Log in to your Dhaka Metro Rail account</p>
                    </div>
                    <div class="card-body p-3 p-sm-4">
                        <form asp-controller="Account" asp-action="Login" asp-route-returnUrl="@ViewData["ReturnUrl"]" class="loading-form" id="loginForm">
                            <div class="mb-3">
                                <label for="phone" class="form-label">Phone Number</label>
                                <div class="input-group">
                                    <span class="input-group-text">+88</span>
                                    <input asp-for="PhoneNumber" type="tel" class="form-control" id="phone" placeholder="Enter your phone number" required>
                                </div>
                                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                            </div>

                            <div class="mb-3 password-container">
                                <label for="password" class="form-label">Password</label>
                                <div class="input-group">
                                    <input asp-for="Password" type="password" class="form-control" id="password" placeholder="Enter your password" required>
                                    <span class="password-toggle" id="passwordToggle"><i class="far fa-eye"></i></span>
                                </div>
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>

                            <div class="d-flex justify-content-between mb-4">
                                <div class="form-check">
                                    <input asp-for="RememberMe" class="form-check-input" type="checkbox" id="rememberMe">
                                    <label class="form-check-label" for="rememberMe">Remember me</label>
                                </div>
                                <a asp-controller="Account" asp-action="ForgotPassword" class="text-primary link">Forgot Password?</a>
                            </div>

                            <div class="d-grid">
                                <button type="submit" class="btn btn-primary" data-loading-text="Logging in...">
                                    <span class="spinner-border spinner-border-sm me-2 d-none" role="status" aria-hidden="true" id="loadingSpinner"></span>
                                    <span class="btn-text"><i class="fas fa-sign-in-alt me-2"></i> Login</span>
                                </button>
                            </div>
                        </form>

                        <div class="text-center mt-4">
                            <p>Don't have an account? <a asp-controller="Account" asp-action="Register" class="text-primary link">Sign up</a></p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <script src="~/js/auth.js" asp-append-version="true"></script>
    <script src="~/js/form-loading-spinner.js" asp-append-version="true"></script>
}